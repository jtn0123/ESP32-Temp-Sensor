{
  "schema": "ui-spec@1",
  "canvas": { "w": 250, "h": 122 },
  "fonts": {
    "tokens": {
      "big":   { "px": 22, "weight": "bold" },
      "label": { "px": 11, "weight": "bold" },
      "small": { "px": 10 },
      "time":  { "px": 11 }
    }
  },
  "rects": {
    "HEADER_NAME": [6, 2, 160, 14],
    "HEADER_TIME": [172, 2, 72, 14],
    "HEADER_CENTER": [100, 2, 50, 14],
    "INSIDE_TEMP": [6, 36, 118, 28],
    "INSIDE_RH":   [6, 66, 118, 14],
    "INSIDE_TIME": [6, 78, 118, 12],
    "OUT_TEMP":    [129, 36, 94, 28],
    "OUT_ICON":    [210, 22, 28, 28],
    "OUT_ROW1_L":  [131, 68, 44, 12],
    "OUT_ROW1_R":  [177, 68, 64, 12],
    "OUT_ROW2_L":  [131, 78, 44, 12],
    "OUT_ROW2_R":  [177, 78, 44, 12],
    "FOOTER_L":    [6, 90, 160, 32],
    "FOOTER_R":    [170, 90, 74, 32],
    "STATUS":      [6, 112, 238, 10]
  },
  "rects_v2_1": {
    "HEADER_NAME": [8, 4, 156, 12],
    "HEADER_TIME": [168, 4, 72, 12],
    "INSIDE_TEMP": [12, 20, 112, 28],
    "INSIDE_LABEL_BOX": [12, 22, 112, 10],
    "INSIDE_TEMP_INNER": [16, 36, 84, 12],
    "INSIDE_TEMP_BADGE": [104, 36, 20, 12],
    "INSIDE_RH": [12, 52, 112, 12],
    "INSIDE_ROW2_L": [12, 68, 56, 12],
    "INSIDE_ROW2_R": [72, 68, 52, 12],
    "OUT_TEMP": [132, 20, 106, 28],
    "OUT_LABEL_BOX": [132, 22, 106, 10],
    "OUT_TEMP_INNER": [136, 36, 78, 12],
    "OUT_TEMP_BADGE": [216, 36, 20, 12],
    "OUT_ICON": [208, 52, 28, 28],
    "OUT_ROW1_L": [132, 68, 44, 12],
    "OUT_ROW1_R": [180, 68, 56, 12],
    "OUT_ROW2_L": [132, 80, 44, 12],
    "OUT_ROW2_R": [180, 80, 56, 12],
    "WEATHER_BAR": [132, 52, 72, 12],
    "FOOTER_L": [8, 96, 116, 20],
    "FOOTER_R": [132, 96, 106, 20],
    "STATUS": [8, 118, 232, 2]
  },
  "iconMap": [
    { "match": ["storm", "thunder", "lightning"], "icon": "weather-lightning" },
    { "match": ["pour", "rain", "shower"],        "icon": "weather-pouring" },
    { "match": ["snow"],                            "icon": "weather-snowy" },
    { "match": ["fog", "mist", "haze"],           "icon": "weather-fog" },
    { "match": ["part", "partly", "partly-cloudy"],                            "icon": "weather-partly-cloudy" },
    { "match": ["cloud", "overcast"],              "icon": "weather-cloudy" },
    { "match": ["night", "clear-night"],           "icon": "weather-night" },
    { "match": ["wind"],                            "icon": "weather-windy-variant" },
    { "match": ["hail"],                            "icon": "weather-snowy" },
    { "match": ["exceptional"],                     "icon": "weather-cloudy" },
    { "match": ["sunny", "clear"],                "icon": "weather-sunny" },
    { "default": true,                               "icon": "weather-sunny" }
  ],
  "components": {
    "chrome": [
      { "op": "line", "from": [0, 0],   "to": [249, 0] },
      { "op": "line", "from": [0, 121], "to": [249, 121] },
      { "op": "line", "from": [0, 0],   "to": [0, 121] },
      { "op": "line", "from": [249, 0], "to": [249, 121] },
      { "op": "line", "from": [125, 18], "to": [125, 121] },
      { "op": "line", "from": [1, 92], "to": [249, 92] }
    ],
    "header_centered": [
      { "op": "line", "from": [1, 18], "to": [249, 18] },
      { "op": "text", "rect": "HEADER_NAME", "font": "label", "align": "left", "text": "{room_name}", "truncate": "ellipsis" },
      { "op": "textCenteredIn", "rect": "HEADER_CENTER", "yOffset": 1, "font": "time", "text": "{time_hhmm}" },
      { "op": "text", "rect": "HEADER_TIME", "font": "time", "align": "right", "text": "v{fw_version}" }
    ],
    "header": [
      { "op": "line", "from": [1, 18], "to": [249, 18] },
      { "op": "text", "rect": "HEADER_NAME", "font": "label", "align": "left", "text": "{room_name}", "truncate": "ellipsis" },
      { "op": "timeRight", "rect": "HEADER_TIME", "font": "time", "source": "{time_hhmm}" }
    ],
    "inside": [
      { "op": "labelCentered", "y": 22, "aboveRect": "INSIDE_TEMP", "text": "INSIDE", "font": "label" },
      { "op": "tempGroupCentered", "rect": "INSIDE_TEMP", "value": "{inside_temp_f}" },
      { "op": "text", "rect": "INSIDE_RH", "font": "small", "align": "left", "text": "{inside_hum_pct}% RH" },
      { "op": "text", "rect": "INSIDE_TIME", "font": "small", "align": "left", "text": "{pressure_hpa:.1f} hPa", "when": "has(pressure_hpa)" }
    ],
    "outside": [
      { "op": "labelCentered", "y": 22, "aboveRect": "OUT_TEMP", "text": "OUTSIDE", "font": "label" },
      { "op": "tempGroupCentered", "rect": "OUT_TEMP", "value": "{outside_temp_f}" },
      { "op": "text", "rect": "OUT_ROW2_L", "font": "small", "align": "left", "text": "{outside_hum_pct}% RH" },
      { "op": "text", "rect": "OUT_ROW2_R", "font": "small", "align": "left", "text": "{wind_mps->mph:.1f} mph" }
    ],
    "footer_split": [
      { "op": "batteryGlyph", "x": 8, "y": 92, "w": 13, "h": 7, "percent": "{battery_percent}" },
      { "op": "text", "x": 26, "y": 90, "font": "small", "text": "Batt {battery_voltage:.2f}V {battery_percent}%" },
      { "op": "text", "x": 26, "y": 100, "font": "small", "text": "~{days}d" },
      { "op": "textCenteredIn", "rect": "FOOTER_L", "yOffset": 22, "font": "small", "text": "IP {ip}" },
      { "op": "iconIn", "rect": "FOOTER_R", "iconFromWeather": "{weather}" },
      { "op": "shortCondition", "rect": "FOOTER_R", "font": "small", "align": "left", "xOffset": 28 }
    ],
    "inside_missing": [
      { "op": "labelCentered", "y": 22, "aboveRect": "INSIDE_TEMP", "text": "INSIDE", "font": "label" },
      { "op": "textCenteredIn", "rect": "INSIDE_TEMP", "font": "label", "text": "—" },
      { "op": "text", "rect": "INSIDE_RH", "font": "small", "align": "left", "text": "—" }
    ],
    "outside_missing": [
      { "op": "labelCentered", "y": 22, "aboveRect": "OUT_TEMP", "text": "OUTSIDE", "font": "label" },
      { "op": "textCenteredIn", "rect": "OUT_TEMP", "font": "label", "text": "—" },
      { "op": "text", "rect": "OUT_ROW2_L", "font": "small", "align": "left", "text": "—" },
      { "op": "text", "rect": "OUT_ROW2_R", "font": "small", "align": "left", "text": "—" }
    ],
    "footer_weather_missing": [
      { "op": "textCenteredIn", "rect": "FOOTER_R", "yOffset": 6, "font": "small", "text": "NO DATA" }
    ],
    "chrome_v2_1": [
      { "op": "line", "from": [0, 0],   "to": [249, 0] },
      { "op": "line", "from": [0, 121], "to": [249, 121] },
      { "op": "line", "from": [0, 0],   "to": [0, 121] },
      { "op": "line", "from": [249, 0], "to": [249, 121] },
      { "op": "line", "from": [128, 16], "to": [128, 96] },
      { "op": "line", "from": [0, 16], "to": [249, 16] },
      { "op": "line", "from": [0, 96], "to": [249, 96] }
    ],
    "header_v2_1": [
      { "op": "text", "rect": "HEADER_NAME", "font": "label", "align": "left", "text": "{room_name}", "truncate": "ellipsis" },
      { "op": "text", "rect": "HEADER_TIME", "font": "time", "align": "right", "text": "v4.1" }
    ],
    "inside_v2_1": [
      { "op": "textCenteredIn", "rect": "INSIDE_LABEL_BOX", "font": "small", "text": "INSIDE" },
      { "op": "textCenteredIn", "rect": "INSIDE_TEMP_INNER", "font": "big", "text": "{inside_temp_f}" },
      { "op": "textCenteredIn", "rect": "INSIDE_TEMP_BADGE", "font": "label", "text": "°F" },
      { "op": "text", "rect": "INSIDE_RH", "font": "small", "align": "left", "text": "{inside_hum_pct}% RH" },
      { "op": "text", "rect": "INSIDE_ROW2_L", "font": "small", "align": "left", "text": "{pressure_hpa:.0f} hPa", "when": "has(pressure_hpa)" },
      { "op": "text", "rect": "INSIDE_ROW2_R", "font": "small", "align": "left", "text": "{co2_ppm} ppm", "when": "has(co2_ppm)" }
    ],
    "outside_v2_1": [
      { "op": "textCenteredIn", "rect": "OUT_LABEL_BOX", "font": "small", "text": "OUTSIDE" },
      { "op": "textCenteredIn", "rect": "OUT_TEMP_INNER", "font": "big", "text": "{outside_temp_f}" },
      { "op": "textCenteredIn", "rect": "OUT_TEMP_BADGE", "font": "label", "text": "°F" },
      { "op": "iconIn", "rect": "OUT_ICON", "iconFromWeather": "{weather}" },
      { "op": "text", "rect": "WEATHER_BAR", "font": "small", "align": "left", "text": "{weather}", "truncate": "ellipsis" },
      { "op": "text", "rect": "OUT_ROW1_L", "font": "small", "align": "left", "text": "{outside_hum_pct}% RH" },
      { "op": "text", "rect": "OUT_ROW1_R", "font": "small", "align": "left", "text": "{wind_mps->mph:.1f} mph" },
      { "op": "text", "rect": "OUT_ROW2_L", "font": "small", "align": "left", "text": "UV {uv_index}", "when": "has(uv_index)" },
      { "op": "text", "rect": "OUT_ROW2_R", "font": "small", "align": "left", "text": "{rain_mm:.1f}mm", "when": "has(rain_mm)" }
    ],
    "footer_v2_1": [
      { "op": "batteryGlyph", "x": 12, "y": 98, "w": 12, "h": 6, "percent": "{battery_percent}" },
      { "op": "text", "x": 28, "y": 98, "font": "small", "text": "{battery_percent}%" },
      { "op": "text", "x": 28, "y": 106, "font": "small", "text": "~{days}d" },
      { "op": "text", "x": 72, "y": 98, "font": "small", "text": "{ip}", "truncate": "ellipsis", "maxWidth": 48 },
      { "op": "text", "x": 136, "y": 98, "font": "small", "text": "{time_hhmm}" },
      { "op": "text", "x": 136, "y": 106, "font": "small", "text": "{weather}", "truncate": "ellipsis", "maxWidth": 96 }
    ],
    "inside_v2_1_missing": [
      { "op": "textCenteredIn", "rect": "INSIDE_LABEL_BOX", "font": "label", "text": "INSIDE" },
      { "op": "textCenteredIn", "rect": "INSIDE_TEMP_INNER", "font": "label", "text": "—" },
      { "op": "text", "rect": "INSIDE_RH", "font": "small", "align": "left", "text": "—" }
    ],
    "outside_v2_1_missing": [
      { "op": "textCenteredIn", "rect": "OUT_LABEL_BOX", "font": "label", "text": "OUTSIDE" },
      { "op": "textCenteredIn", "rect": "OUT_TEMP_INNER", "font": "label", "text": "—" },
      { "op": "text", "rect": "WEATHER_BAR", "font": "small", "align": "left", "text": "NO DATA" },
      { "op": "text", "rect": "OUT_ROW1_L", "font": "small", "align": "left", "text": "—" },
      { "op": "text", "rect": "OUT_ROW1_R", "font": "small", "align": "left", "text": "—" }
    ]
  },
  "variants": {
    "v1": ["chrome", "header", "inside", "outside", "footer_split"],
    "v1_missing_outside": ["chrome", "header", "inside", "outside_missing", "footer_weather_missing"],
    "v1_missing_inside": ["chrome", "header", "inside_missing", "outside", "footer_split"],
    "v1_missing_all": ["chrome", "header", "inside_missing", "outside_missing", "footer_weather_missing"],
    "v2_1_grid": ["chrome_v2_1", "header_v2_1", "inside_v2_1", "outside_v2_1", "footer_v2_1"],
    "v2_1_missing_outside": ["chrome_v2_1", "header_v2_1", "inside_v2_1", "outside_v2_1_missing", "footer_v2_1"],
    "v2_1_missing_inside": ["chrome_v2_1", "header_v2_1", "inside_v2_1_missing", "outside_v2_1", "footer_v2_1"],
    "v2_1_missing_all": ["chrome_v2_1", "header_v2_1", "inside_v2_1_missing", "outside_v2_1_missing", "footer_v2_1"]
  },
  "defaultVariant": "v1",
  "regions": {
    "partial": {
      "INSIDE_TEMP": ["tempGroupCentered"],
      "OUT_TEMP": ["tempGroupCentered"],
      "OUT_ROW2_L": ["text"],
      "OUT_ROW2_R": ["text"],
      "HEADER_TIME": ["timeRight"],
      "FOOTER_L": ["batteryGlyph", "text", "text", "text"],
      "FOOTER_R": ["iconIn", "shortCondition"]
    }
  }
}


