BasedOnStyle: LLVM
IndentWidth: 2
TabWidth: 2
UseTab: Never
ColumnLimit: 100
AllowShortIfStatementsOnASingleLine: false
DerivePointerAlignment: false
PointerAlignment: Left
SortIncludes: false
IncludeBlocks: Preserve

# Ensure ESP-IDF C headers sort before C++ standard headers like <cstdio>
IncludeCategories:
  - Regex: '^<esp_.*\\.h>$'
    Priority: 1
    SortPriority: -20
  - Regex: '^<[^/]+\\.h>$'
    Priority: 2
    SortPriority: -10
  - Regex: '^<[^/]+>$'
    Priority: 3
    SortPriority: 0
  - Regex: '".*"'
    Priority: 4
    SortPriority: 10

